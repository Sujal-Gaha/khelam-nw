generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum RoleEnum {
    ADMIN
    USER
}

model User {
    id                String   @id @default(cuid())
    email             String   @unique @db.VarChar(256)
    name              String
    password          String
    is_email_verified Boolean  @default(false)
    role              RoleEnum

    @@map("users")
}
